<h2 class="page-header"><%= book.title %></h2>
<div class="book-details">

    <div>
        <img src="<%= book.coverImagePath %>" class="book-cover" alt="<%= book.title %>">
        <div class="book-details-btn-grid">
            <a href="/books/<%=book.id%>/edit" class="btn btn-primary">Edit</a>
            <%- include('../partials/deleteForm.ejs', {url: `/books/${book.id}`, name: '' } )%>
            <a href="/authors/<%=book.author.id%>" class="btn btn-primary book-details-double-button">View Author</a>
        </div>
    </div>

    <div class="book-values-board">
        <div class="book-details-label">
            author: </div>
        <div> <%= book.author.name%> </div>
        <div class="book-details-label">
            published: </div>
        <div> <%=  book.published.toDateString() %></div>
        <div class="book-details-label">
            page count: </div>
        <div> <%=  book.pageCount %></div>
        <div class="book-details-label">
            description: </div>
        <div> <%=  book.description %></div>
    </div>
</div>
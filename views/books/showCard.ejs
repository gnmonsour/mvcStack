<h2 class="page-header"><%= book.title %></h2>

<img src="<%= book.coverImagePath %>" height="150" width="100" alt="<%= book.title %>">
<p class="author">
    author: <a href="/authors/<%=book.author.id%>">
        <%=book.author.name%></a>
</p>
<p class="published">
    published: <%= book.published.toDateString() %></p>
<p class="page-count">
    page count: <%= book.pageCount %></p>
<p class="description">
    description: <%= book.description %></p>

<div class="gradient-bar">
</div>
<div class="form-row form-row-end btn-row">
    <a href="/books/<%=book.id%>/edit" class="btn btn-primary">Edit</a>

    <%- include('../partials/deleteForm.ejs', {url: `/books/${book.id}`, name: '' } )%>
</div>
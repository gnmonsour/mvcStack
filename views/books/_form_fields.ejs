<div>
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= book.title %>">
    </div>
    <div>
        <label for="author">Author</label>
        <select name="author">
            <% authors.forEach(author => {%>
            <% if (author.id === book.author) {%>
            <option selected label="<%=author.name%>" value="<%= author.id %>">
                <% }else{ %>
            <option label="<%=author.name%>" value="<%= author.id %>">
                <% }}) %>
        </select>
    </div>
</div>
<div>
    <div>
        <label for="published">Publish Date</label>
        <input type="date" name="published" id="published"
            value="<%= book.published == null ? '' : book.published.toISOString().split('T')[0] %>">
    </div>

    <div>
        <label for="pagecount">Page Count</label>
        <input type="number" min='1' name="pagecount" id="pagecount" value="<%= book.pageCount > 0 ? book.pageCount : 1 %>">
        
    </div>
</div>

<div>
    <div>
        <label for="cover">Cover</label>
        <input type="file" name="cover" id='cover'>
    </div>

    <div>
        <label for="description">Description</label>
        <textarea name="description" id="description"><%= book.description %></textarea>
    </div>
</div>